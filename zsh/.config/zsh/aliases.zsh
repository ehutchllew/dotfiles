
# List
alias ll="ls -alFG --color"
alias la="ls -a"

# File or Dir Size
# Calc bytes recursively for argument
alias dub="du -b"
# Calc total bytes for argument only
alias dus="du -sb"
# Calc human readable bytes
alias duh="du -sbh"

# File Manipulation
alias cb="xclip -selection 'clipboard' -i"

# Git
alias gph="git push -u origin HEAD"
